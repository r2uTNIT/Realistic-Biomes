<?xml version="1.0" encoding="UTF-8"?>

<Defs>
	<BiomeDef>
		<defName>RealisticBiomes-HotDesert</defName>	
		<label>Hot Desert</label>
		<description>An extremely hot, dry area, devoid of almost all life</description>
		<workerClass>RealisticBiomes.HotDesert</workerClass>

		<animalDensity>1</animalDensity>
		<plantDensity>0.2</plantDensity>
		<settlementSelectionWeight>0.25</settlementSelectionWeight>
		<texture>realistic_biomes/HotDesert</texture>

		<!--25% forageability-->
		<forageability>0.25</forageability>

		<movementDifficulty>1</movementDifficulty>
		<foragedFood>RawAgave</foragedFood>
		<wildPlantRegrowDays>20</wildPlantRegrowDays>

		<!--0.3 yearly disease frequency-->
		<diseaseMtbDays>160</diseaseMtbDays>

		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>

			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>100</commonality>
			</li>
			
			<li>
				<diseaseInc>Disease_AnimalFlu</diseaseInc>
				<commonality>100</commonality>
			</li>
			
			<li>
				<diseaseInc>Disease_AnimalPlague</diseaseInc>
				<commonality>100</commonality>
			</li>
			
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>40</commonality>
			</li>

			<li>
				<diseaseInc>Disease_MuscleParasites</diseaseInc>
				<commonality>40</commonality>
			</li>

			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>40</commonality>
			</li>

			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>40</commonality>
			</li>

			<li>
				<diseaseInc>Disease_OrganDecay</diseaseInc>
				<commonality>10</commonality>
			</li>
		</diseases>

		<!--Generates sand-->
		<terrainsByFertility>
			<li>
				<terrain>Sand</terrain>
				<min>-999</min>
				<max>999</max>
			</li>
		</terrainsByFertility>

		<!--Randomly generates patches of soft sand-->
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.02</perlinFrequency>

				<thresholds>
					<li>
						<terrain>SoftSand</terrain>
						<min>0.8</min>
						<max>999</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>

		<baseWeatherCommonalities>
			<Clear>16</Clear>
			<Fog>2</Fog>
			<Rain>2</Rain>
			<DryThunderstorm>2</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<FoggyRain>1</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
		</baseWeatherCommonalities>

		<!--10.0 = common : 1.0 = uncommon : 0.1 = rare-->
		<wildPlants>
			<Plant_Agave>1.0</Plant_Agave>
			<Plant_Grass>10.0</Plant_Grass>
			<Plant_SaguaroCactus>1.0</Plant_SaguaroCactus>
		</wildPlants>

		<!--1.0 = common : 0.5 = uncommon : 0.15 = rare-->
		<wildAnimals>
			<Donkey>0.5</Donkey>
			<Dromedary>0.5</Dromedary>
			<Fox_Fennec>0.25</Fox_Fennec>
			<GuineaPig>0.15</GuineaPig>
			<Iguana>1.0</Iguana>
		</wildAnimals>

		<allowedPackAnimals>
			<li>Dromedary</li>
		</allowedPackAnimals>
	</BiomeDef>

